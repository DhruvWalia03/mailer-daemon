<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginStart="12dp"
  android:layout_marginTop="4dp"
  android:layout_marginEnd="12dp"
  android:layout_marginBottom="4dp"
  app:cardCornerRadius="8dp"
  app:strokeColor="@color/colorBgLightSilver"
  app:strokeWidth="1dp">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
      android:id="@+id/notice_head"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="48dp"
      android:paddingStart="@dimen/padding_10"
      android:paddingTop="@dimen/padding_8"
      android:text="No Data"
      android:textColor="@color/colorTextBlack"
      android:textSize="@dimen/text_size_16"/>

    <View
        android:id="@+id/notice_options"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/view"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_more_horiz_gray_24dp" />
    <TextView
      android:id="@+id/notice_detail"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/notice_head"
      android:layout_gravity="bottom"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="36dp"
      android:autoLink="web"
      android:padding="2dp"
      android:textSize="14sp"
      />
    <View
      android:id="@+id/view"
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:layout_below="@+id/notice_detail"
      android:background="@color/colorBgLightSilver"
      />
    <TextView
      android:id="@+id/time2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/view"
      android:gravity="end"
      android:padding="6dp"
      android:paddingEnd="@dimen/padding_10"
      android:text="time"
      android:textSize="12sp"
      android:visibility="gone"/>
    <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/notice_photo"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/notice_detail"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="2dp"
      android:foreground="@drawable/image_mask"
      android:minHeight="160dp"
      app:actualImageScaleType="focusCrop"
      app:placeholderImage="@drawable/placeholder_image"/>
    <TextView
      android:id="@+id/time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignEnd="@+id/notice_photo"
      android:layout_alignBottom="@+id/notice_photo"
      android:padding="@dimen/padding_10"
      android:paddingEnd="@dimen/padding_10"
      android:text="time"
      android:textColor="@android:color/white"
      android:textSize="12sp"/>
  </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
